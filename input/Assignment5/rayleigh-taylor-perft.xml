<?xml version="1.0"?>
<simulation xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:noNamespaceSchemaLocation="../../res/input.xsd">
    <output>
        <name>rayleigh_perft</name>
        <format>NO_OUT</format>
        <frequency>300000</frequency>
    </output>
    <param>
        <calc>LJ_FULL</calc>
        <strategy>GRID</strategy>
        <boundaries>
            <boundary_yz_near>PERIODIC</boundary_yz_near>
            <boundary_xz_near>HALO</boundary_xz_near>
            <boundary_xy_near>PERIODIC</boundary_xy_near>
            <boundary_yz_far>PERIODIC</boundary_yz_far>
            <boundary_xz_far>HALO</boundary_xz_far>
            <boundary_xy_far>PERIODIC</boundary_xy_far>
        </boundaries>
        <delta_t>0.0005</delta_t>
        <t_end>100</t_end>
        <dimensions>3</dimensions>
        <r_cutoff>3.6</r_cutoff>
        <domain>
            <vx>60</vx>
            <vy>60</vy>
            <vz>60</vz>
        </domain>
        <g_grav>-12.44</g_grav>
    </param>
    <cuboid>
        <position>
            <vx>0.6</vx>
            <vy>0.6</vy>
            <vz>0.6</vz>
        </position>
        <velocity>
            <vx>0</vx>
            <vy>0</vy>
            <vz>0</vz>
        </velocity>
        <count>
            <vx>50</vx>
            <vy>20</vy>
            <vz>50</vz>
        </count>
        <m>1.0</m>
        <sigma>1.2</sigma>
        <epsilon>1.0</epsilon>
        <h>1.2</h>
        <b_motion>0.0</b_motion>
    </cuboid>
    <cuboid>
        <position>
            <vx>0.6</vx>
            <vy>24.6</vy>
            <vz>0.6</vz>
        </position>
        <velocity>
            <vx>0</vx>
            <vy>0</vy>
            <vz>0</vz>
        </velocity>
        <count>
            <vx>50</vx>
            <vy>20</vy>
            <vz>50</vz>
        </count>
        <m>2.0</m>
        <sigma>1.1</sigma>
        <epsilon>1.0</epsilon>
        <h>1.2</h>
        <b_motion>0.0</b_motion>
    </cuboid>
    <thermo>
        <T_init>40</T_init>
        <T_frequency>1000</T_frequency>
    </thermo>
</simulation>